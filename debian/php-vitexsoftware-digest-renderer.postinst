#!/bin/bash
set -e

case "$1" in
    configure)
        # Register with composer autoloader if available
        if [ -x /usr/bin/composer ]; then
            cd /usr/share/php/VitexSoftware/DigestRenderer
            composer dump-autoload 2>/dev/null || true
        fi
        
        # Update system autoloader
        if [ -x /usr/bin/update-alternatives ]; then
            update-alternatives --quiet --install /usr/share/php/autoload.php autoload-php \
                /usr/share/php/VitexSoftware/DigestRenderer/vendor/autoload.php 20 || true
        fi
        ;;
esac

#DEBHELPER#

exit 0